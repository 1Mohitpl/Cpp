#include<iostream>
using namespace std;

int main (){

    int rows;
    int cols; 
    cout << " please enter an rows and cols" << endl;
    cin >> rows;
    cin >> cols;

    for (int row = 0; row < rows; row++)
    {
         for (int  col = 0; col < cols; col++)
         {
            if (row == 0 || row == rows-1){
                cout << "*";
            }
            else{
                if (col == 0 || col ==cols-1){
                    cout <<"*";
                }
                else{
                    cout <<" ";
                }
            }
            
         }
         
      cout << endl;
    }
    
}

